#include <stdio.h>
#include<string.h>

int main(void) {
	int test;
	scanf("%d",&test);
	for(int i=0;i<test;i++){
	     int n;
	     scanf("%d",&n);
	     char str[n];
	     scanf("%s",str);
	     int count = 0;
	     for(int i =0;i<n;i++){
	         if(str[i]== '1' && str[i+1]== '0'){
	             count++;
	         }
	     }
	     printf("%d\n",count);
	}
	return 0;
}
